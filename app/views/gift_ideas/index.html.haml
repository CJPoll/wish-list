.container-fluid
	%h1= "#{@user.first_name}'s Wish List"

	.row.hidden-xs
		.table-responsive
			- if @user == current_user
				%wishes-index{ url: @url }
			- else
				%editable-wish-table{ url: @url }

	.visible-xs
		- @gift_ideas.each do |gift_idea|
			.container-fluid
				.row
					= link_to gift_idea.name, gift_idea.url, class: [:btn, :'btn-primary']
				.row
					%p
						= gift_idea.description


	.row
		= link_to 'New Wish', new_gift_idea_path, class: [:btn, :'btn-success', :'left-margin']
